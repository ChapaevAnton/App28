<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5">


    <ImageView
        android:id="@+id/title_image_second"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="37dp"
        android:src="@drawable/android"
        android:transitionName="titleImage"
        app:layout_constraintBottom_toTopOf="@+id/desc_text_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_text_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="292dp"
        android:text="activity 2 description"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:transitionName="descText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_image_second"
        app:layout_constraintTop_toBottomOf="@+id/title_image_second" />

</androidx.constraintlayout.widget.ConstraintLayout>